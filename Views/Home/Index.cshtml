@{
    ViewData["Title"] = "A Book A Day";
}

@model ProjectListViewModel
<!--
    New Bootstrap:
        table-hover
        thead-dark
        table-secondary
-->
<div>
    <!--Bootstrap to create a table-->
    <table class="table table-secondary table-bordered table-hover table-sm">
        <thead class="thead-dark">
            <!--Sets the table column names-->
            <tr><th>Title</th><th>Author</th><th>Publisher</th><th>ISBN</th><th>Classifaction/Category</th><th>Price</th><th>Number of Pages</th></tr>
        </thead>

        <!--Loops through the list of books and puts it in a table-->
        <tbody >
            @foreach (var x in Model.Books)
            {
            <tr>
                <td>@x.Title</td>
                <td>@x.Author</td>
                <td>@x.Publisher</td>
                <td>@x.ISBN</td>
                <td>@x.Category</td>
                <td>@("$" + x.Price)</td>
                <td>@x.NumPages</td>
            </tr>
            }
        </tbody>
    </table>
</div>

<!--Calls our tag helper to make nav-->
<div page-model="@Model.PagingInfo" page-action="Index" page-classes-enabled="true" page-class="btn"
     page-class-normal="btn-outline-dark"
     page-class-selected="btn-primary"
     class="btn-group pull-right m-1"></div>
